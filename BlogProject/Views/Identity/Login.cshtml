@model BlogProject.Models.ViewModels.IdentityViewModel.LoginViewModel

<form asp-action='Login' asp-controller='Identity' method='post'>
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="m-2">
        <label asp-for="Email" class='form-label'>Email</label>
        <input asp-for="Email" class='form-control'/>
    </div>
    <div class="m-2">
        <label asp-for="Password" class='form-label'>Password</label>
        <input asp-for="Password" class="form-control"/>
    </div>
    <div class="m-2">
        <input asp-for="RememberMe" class='form-label'/>
        <label asp-for="RememberMe" class='form-label'>Remember Me</label>
    </div>
    <input type='submit' value="Login" />
</form>